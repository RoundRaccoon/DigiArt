<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="a10m3.cruciada.GetHelp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="Ghid de utilizare"
        android:textSize="30dp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="      Dupa ce ati intrat in aplicatie si v-ati facut contul de utilzator, puteti evalua fiecare poza in parte si, eventual, sa va aratati aprecierea fata de respectivul desen cu un numar de stelute (de la 1 la 5)."
        android:textSize="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="      La finalul concursului, desenele cu cele mai multe stelute pot fi reevaluate din nou, tot cu ajutorul aplicatiei, si va fi ales un castigator."
        android:textSize="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="      Butonul de plus este folosit de elevi pentru a incarca pozele in aplicatie."
        android:textSize="24dp"/>

</LinearLayout>