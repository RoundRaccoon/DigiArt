<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="a10m3.cruciada">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logourat"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logourat"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterUserActivity"
            android:noHistory="true" />
        <activity
            android:name=".StartActivity"
            android:label="DigiArt"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CruciadaHome"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".PostActivity" />
        <activity
            android:name=".GetHelp"
            android:noHistory="true" />
        <activity
            android:name=".SinglePost"
            android:noHistory="true" />
        <activity
            android:name=".ResultsActivity"
            android:noHistory="true" />
        <activity android:name=".MembersActivity"></activity>
    </application>

</manifest>